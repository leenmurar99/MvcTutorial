
@model IEnumerable<MvcTutorial.Models.Product>

<h2>Products</h2>
<a asp-action="Create" class="btn btn-primary">Add Product</a>
<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Price</th>
            <th>Stock</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Name</td>
            <td>@item.Price</td>
            <td>@item.Stock</td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.id">Edit</a> |
                <a asp-action="Delete"
                   asp-route-id="@item.id">Delete</a>
            </td>
        </tr>
    }
    </tbody>
</table>